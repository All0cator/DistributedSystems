<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/t_main_greetings"
        android:layout_width="245dp"
        android:layout_height="68dp"
        android:background="@drawable/login_page_background_colour"
        android:gravity="center"
        android:text="Welcome Customer!"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <Button
        android:id="@+id/b_main_refresh"
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/enter_button_colour"
        android:text="Refresh"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_main_greetings"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b_main_search_stores"
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/enter_button_colour"
        android:text="Search Stores"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_main_refresh"
        app:layout_constraintVertical_bias="0.142" />

    <Button
        android:id="@+id/b_main_new_purchase"
        android:layout_width="219dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/enter_button_colour"
        android:text="New Purchase"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_main_search_stores"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b_main_grade_store"
        android:layout_width="232dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/enter_button_colour"
        android:text="Grade Store"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_main_new_purchase"
        app:layout_constraintVertical_bias="0.228" />

</androidx.constraintlayout.widget.ConstraintLayout>